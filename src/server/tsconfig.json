{
    "compilerOptions": {
        "target": "es6",
        "rootDir": "./../",
        "outDir": "./../../build",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "baseUrl": ".",
        "types" : [ "node" ],
        "paths": {
            "*": [
                "*",
                "./@types_local/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./@types_local"
        ]
    },
    "include": [
        "app/**/*.ts",
        "../../src/common/*"
    ],
    "exclude": [
        "../../node_modules",
        "../../src/browser",
        "../../src/mobile"
    ]
}