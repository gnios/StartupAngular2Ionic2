{
    "compilerOptions": {
        "target": "es6",
        "rootDir": "./../",
        "outDir": "./../build",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "baseUrl": ".",
        "types" : [ "node" ],
        "paths": {
            "*": [
                "*",
                "./../src/server/@types_local/*"
            ]
        },
        "typeRoots": [
            "./../node_modules/@types",
            "./../src/server/@types_local"
        ]
    },
    "include": [
        "app/**/*.ts",
        "../src/common/*"
    ],
    "exclude": [
        "../node_modules",
        "../src/browser",
        "../src/mobile"
    ]
}