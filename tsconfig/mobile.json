{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/mobile/**/*.ts"
  ], 
  "typeRoots": [
      "../node_modules/@types"
    ],
  "exclude": [
    "../node_modules",
    "../src/browser",
    "../src/server",
    "../src/common"    
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
